{
	"compilerOptions": {
    "noEmit": false,
    "outDir": "./dist",
    "sourceMap": true,
    "inlineSourceMap": false,
    "inlineSources": false,
    "jsx": "preserve",

    "allowJs": true,
		"experimentalDecorators": true,
		"lib": ["es6", "dom"],
		"module": "commonjs",
		"moduleResolution": "node",
		"target": "es6",
		"noImplicitAny": true,
		"suppressImplicitAnyIndexErrors": true,

    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "baseUrl": ".",
    "paths": {
      "*": [
        "app/*"
      ]
    }
	},
	"include": [
    "app/**/*"
	],
	"exclude": [
		"node_modules",
    "build"
	],

  "awesomeTypescriptLoaderOptions": {
    "useBabel": true,
    "forkChecker": true,
    "useCache": false
  }
}
